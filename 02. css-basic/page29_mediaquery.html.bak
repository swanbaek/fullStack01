            /* @media only screen and (min-width: 420px) {
                #main {
                    background-color: turquoise;
                }
            } */

            @media only screen and (min-width: 421px) and (max-width: 1024px) {
                #main {
                    background-color: yellow;
                }
            }
        </style>
    </head>
    <body>
        <div id="main"></div>
    </body>
</html>
